{
  // ==========================================================================
  // GraphRAG Configuration - NARRATIVE FICTION
  // ==========================================================================
  // Converted from: narrative_fiction.toml
  // VSCode: This file has autocomplete! Press Ctrl+Space for suggestions.
  // ==========================================================================

  "$schema": "../schema/graphrag-config.schema.json",
  "mode": {
    "approach": "semantic"
  },
  "general": {
    "input_document_path": "path/to/your/novel.txt",
    "output_dir": "./output/narrative_analysis",
    "log_level": "info",
    "max_threads": 4,
    "enable_profiling": true
  },
  "pipeline": {
    "workflows": [
      "extract_text",
      "extract_entities",
      "build_graph",
      "detect_communities"
    ],
    "parallel_execution": true,
    "text_extraction": {
      "chunk_size": 800,
      "chunk_overlap": 300,
      "min_chunk_size": 200,
      "clean_control_chars": true,
      "normalize_whitespace": true
    },
    "entity_extraction": {
      "model_name": "llama3.1:8b",
      "temperature": 0.1,
      "max_tokens": 1500,
      "entity_types": [
        "PERSON",
        "CHARACTER_TRAIT",
        "LOCATION",
        "OBJECT",
        "EVENT",
        "RELATIONSHIP",
        "EMOTION",
        "THEME",
        "DIALOGUE_SPEAKER",
        "TIME_PERIOD",
        "CONFLICT",
        "SYMBOL"
      ],
      "confidence_threshold": 0.6,
      "filters": {
        "min_entity_length": 2,
        "max_entity_length": 100,
        "allowed_patterns": [
          "^[A-Z][a-zA-Z\\s'-]+$",
          "^[A-Z][a-z]+\\s+[A-Z][a-z]+$",
          "^(Mr|Mrs|Miss|Dr|Uncle|Aunt|Captain|Professor)\\s+[A-Z][a-z]+$"
        ],
        "excluded_patterns": [
          "^(the|and|but|for|with|from|said|then|when|where)$",
          "^\\d+$",
          "^[a-z]+$"
        ]
      }
    },
    "graph_building": {
      "relation_scorer": "cosine_similarity",
      "min_relation_score": 0.4,
      "max_connections_per_node": 25,
      "bidirectional_relations": true,
      "character_centrality_boost": 1.5
    },
    "community_detection": {
      "algorithm": "leiden",
      "resolution": 0.6,
      "min_community_size": 2,
      "max_community_size": 15
    }
  },
  "text_processing": {
    "enabled": true,
    "chunk_size": 800,
    "chunk_overlap": 300,
    "min_chunk_size": 200,
    "max_chunk_size": 1500,
    "normalize_whitespace": true,
    "remove_artifacts": true,
    "extract_keywords": true,
    "keyword_min_score": 0.15
  },
  "entity_extraction": {
    "enabled": true,
    "min_confidence": 0.6,
    "use_gleaning": true,
    "max_gleaning_rounds": 4,
    "gleaning_improvement_threshold": 0.08,
    "semantic_merging": true,
    "merge_similarity_threshold": 0.85,
    "automatic_linking": true,
    "linking_confidence_threshold": 0.7,
    "gleaning": {
      "focus_areas": [
        "PERSON",
        "CHARACTER_TRAIT",
        "RELATIONSHIP",
        "EMOTION",
        "EVENT"
      ],
      "context_window": 400,
      "llm_temperature": 0.05,
      "narrative_context": true,
      "character_tracking": true
    }
  },
  "graph_construction": {
    "enabled": true,
    "incremental_updates": true,
    "use_pagerank": true,
    "pagerank_damping": 0.85,
    "pagerank_iterations": 75,
    "pagerank_convergence": 5e-05,
    "extract_relationships": true,
    "relationship_confidence_threshold": 0.5,
    "character_relationship_boost": 1.3
  },
  "vector_processing": {
    "enabled": true,
    "embedding_model": "nomic-embed-text",
    "embedding_dimensions": 768,
    "use_hnsw_index": true,
    "hnsw_ef_construction": 300,
    "hnsw_m": 24,
    "similarity_threshold": 0.65
  },
  "query_processing": {
    "enabled": true,
    "use_advanced_pipeline": true,
    "use_intent_classification": true,
    "use_concept_extraction": true,
    "use_temporal_parsing": true,
    "confidence_threshold": 0.45,
    "intent_classification": {
      "character_patterns": [
        "who is",
        "character",
        "personality",
        "traits",
        "relationship",
        "motivation"
      ],
      "plot_patterns": [
        "what happens",
        "event",
        "scene",
        "chapter",
        "story",
        "plot"
      ],
      "theme_patterns": [
        "theme",
        "meaning",
        "symbolism",
        "message",
        "represents",
        "significance"
      ],
      "setting_patterns": [
        "where",
        "location",
        "place",
        "setting",
        "environment",
        "atmosphere"
      ],
      "conflict_patterns": [
        "conflict",
        "problem",
        "struggle",
        "tension",
        "crisis"
      ]
    }
  },
  "ollama": {
    "enabled": true,
    "host": "http://localhost",
    "port": 11434,
    "chat_model": "llama3.1:8b",
    "embedding_model": "nomic-embed-text",
    "timeout_seconds": 90,
    "max_retries": 3,
    "fallback_to_hash": false,
    "max_tokens": 1200,
    "temperature": 0.2,
    "generation": {
      "temperature": 0.3,
      "top_p": 0.85,
      "max_tokens": 1500,
      "stream": false
    }
  },
  "performance": {
    "batch_processing": true,
    "batch_size": 30,
    "worker_threads": 4,
    "memory_limit_mb": 6144,
    "cache_embeddings": true
  },
  "monitoring": {
    "enabled": true,
    "track_character_consistency": true,
    "track_relationship_accuracy": true,
    "track_plot_coherence": true
  }
}